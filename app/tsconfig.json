{
  "compilerOptions": {
    "module": "NodeNext",
    "isolatedModules": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "outDir": "build/out/",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  
}