{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "outDir": "build/out/",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  
  "lib": [
    "ESNext"
  ]
}