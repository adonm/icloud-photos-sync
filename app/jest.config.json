{
    "preset": "ts-jest/presets/default-esm-legacy",
    "testEnvironment": "node",
    "slowTestThreshold": 30,
    "reporters": [
      "default",
      "github-actions"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/app/event/**/*",
      "!src/app/error/**/*",
      "!src/lib/package.ts"
    ],
    "coverageProvider": "v8",
    "coverageReporters": [
      "text-summary",
      "html",
      "json-summary"
    ],
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }